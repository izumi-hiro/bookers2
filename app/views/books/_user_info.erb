<h2>User info</h2>
<p><%= image_tag 'default-image.jpg' %></p>
<tr>
  <th>name</th>
  <th><%= user.name %></th>
</tr>
<tr>
  <th>introduction</th>
  <th><%= user.introduction %></th>
</tr>
<p><%= link_to "プロフィールの編集", edit_user_path(user) %></p>
<h2>New book</h2>
<%= form_with model: book, local:true do |f| %>
  <label>Title</label>
    <%= f.text_field :title %>
  <label>Opinion</label>
    <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>