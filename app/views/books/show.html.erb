<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'user_info', user: @user, book: @new_book %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
        <tbody>
          <tr>
            <td>
              <%= link_to user_path(@book.user_id) do %>
                <%= image_tag @book.user.get_profile_image(100, 100) %>
              <% end %><br>
              <%= link_to @user.name, user_path(@book.user_id) %>
            </td>
            <td>
              <%= link_to @book.title, book_path(@book.id) %>
            </td>
            <td>
              <%= @book.body %>
            </td>
              <% if @book.user == current_user %>
                <td>
                  <%= link_to "Edit", edit_book_path, class: 'btn btn-sm btn-success' %>
                </td>
                <td>
                  <%= link_to "Destroy", book_path(@book), method: :delete, class: 'btn btn-sm btn-danger' %>
                </td>
              <% end %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>

