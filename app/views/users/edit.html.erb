<h2>User info</h2>
<%= form_with model: @user, url: user_path(@user.id), method: :patch, local:true do |f| %>

  <h4>Name</h4>
  <%= f.text_field :name %>
  
  <h4>Introduction</h4>
  <%= f.text_area :introduction %>
  
  <%= f.submit 'Update User' %>
<% end %>