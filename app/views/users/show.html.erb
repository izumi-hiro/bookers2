<%= render 'books/user_info', user: @user, book: @book %>

<h2>Books</h2>
<tr>
  <th>Title</th>
  <th>Opinion</th>
</tr>
<% @books.each do |book| %>
<div>
  <%= link_to user_path(book.user_id) do %>
    <%= image_tag book.user.get_profile_image(100, 100) %>
  <% end %>
  <p>
    <%= link_to book.title, book_path(book.id) %>
  </p>
  <p><%= book.body %></p>
</div>
<% end %>
